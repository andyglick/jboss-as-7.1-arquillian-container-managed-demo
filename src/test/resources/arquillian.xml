<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns="http://jboss.org/schema/arquillian"
  xsi:schemaLocation="http://jboss.org/schema/arquillian
  http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

  <!-- using the servlet test injection protocol as opposed to the jmx test protocol -->
  <defaultProtocol type="Servlet 3.0"/>

  <extension qualifier="webdriver">
    <property name="browser">${browser}</property>
  </extension>

  <container qualifier="glassfish-managed" default="false">
    <configuration>
      <property name="glassFishHome">${user.home}/servers/glassfish-4.1.1</property>
      <property name="adminHost">localhost</property>
      <property name="adminPort">4848</property>
    </configuration>
  </container>

  <container qualifier="arquillian-jetty-embedded-9" default="false"/>

  <container qualifier="jbossas-managed" default="true">
    <configuration>
      <property name="allowConnectingToRunningServer">true</property>
      <property name="jbossHome">${user.home}/servers/EAP-6.4.0</property>
    </configuration>
  </container>

  <container qualifier="jbossas-remote-7" default="false"/>

</arquillian>
